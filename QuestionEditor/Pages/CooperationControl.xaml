<UserControl x:Class="QuestionEditor.Pages.CooperationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:QuestionEditor.Pages"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             AllowDrop="True"
             Drop="CooperationControl_OnDragDrop">
    <Grid>

        <TextBlock TextWrapping="Wrap"
                   FontSize="20">
            多人协作的步骤：
            <LineBreak></LineBreak>
            各人上交各人的 .db 文件，由一个人把它们依次拖拽到本页面，与当前的数据库合并。
            <LineBreak></LineBreak>
            <TextBlock x:Name="Block" FontSize="80"></TextBlock>
        </TextBlock>
    </Grid>
</UserControl>